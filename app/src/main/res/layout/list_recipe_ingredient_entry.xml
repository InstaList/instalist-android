<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/InstalistTheme1.base_list_entry"
    >

<TextView
    android:id="@+id/list_recipe_ingredient_entry_amount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TestEintrag"
    />
<TextView
    android:id="@+id/list_recipe_ingredient_entry_amount_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TestEintrag"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/list_recipe_ingredient_entry_amount"
    android:layout_toEndOf="@+id/list_recipe_ingredient_entry_amount"
    android:layout_marginLeft="18dp"
    android:layout_marginStart="18dp" />
<TextView
    android:id="@+id/list_recipe_ingredient_entry_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TestEintrag"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/list_recipe_ingredient_entry_amount_type"
    android:layout_toEndOf="@+id/list_recipe_ingredient_entry_amount_type"
    android:layout_marginLeft="26dp"
    android:layout_marginStart="26dp" />
</RelativeLayout>