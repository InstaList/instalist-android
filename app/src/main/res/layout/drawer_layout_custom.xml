<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/left_side_navigation_drawer"
    android:id="@+id/list_view_left_side_navigation"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_layout_custom_new_listname_edittext"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/drawer_layout_custom_new_listname_hint"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drawer_layout_custom_add_list_button"
        android:id="@+id/drawer_layout_custom_add_list_name_button"
        android:layout_below="@+id/drawer_layout_custom_new_listname_edittext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_layout_custom_list_name_view"
        android:layout_below="@+id/drawer_layout_custom_add_list_name_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>