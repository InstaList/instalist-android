<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_view_left_side_navigation"
    style="@style/left_side_navigation_drawer"
    >

    <EditText
        android:id="@+id/drawer_layout_custom_new_name"
        style="@style/InstalistTheme1.base_edit_text_style"
        android:hint="@string/drawer_layout_custom_new_addition_hint"
        android:layout_alignParentTop="true"
        />
    <LinearLayout
        android:id="@+id/drawer_layout_custom_create_container"
        android:layout_below="@+id/drawer_layout_custom_new_name"
    style="@style/InstalistTheme1.base_linear_layout_list"
    >
    <Button
        android:id="@+id/drawer_layout_custom_create_list"
        android:text="@string/create_list"
        style="?android:attr/borderlessButtonStyle"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/fab_material_light_blue_500"
        />

    <Button
        android:id="@+id/drawer_layout_custom_create_category"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/create_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:textColor="@color/fab_material_light_blue_500"
        />

</LinearLayout>


    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_layout_custom_list_name_view"
        android:layout_below="@+id/drawer_layout_custom_create_container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/drawer_layout_custom_settings" />
    <Button
        android:id="@+id/drawer_layout_custom_settings"
        style="@style/InstalistTheme1.base_button"
        android:text="@string/action_settings"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>