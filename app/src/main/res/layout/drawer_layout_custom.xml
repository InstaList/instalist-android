<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_view_left_side_navigation"
    style="@style/left_side_navigation_drawer"
    >

    <EditText
        android:id="@+id/drawer_layout_custom_new_name"
        style="@style/InstalistTheme1.base_edit_text_style"
        android:hint="@string/drawer_layout_custom_new_addition_hint"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/drawer_layout_custom_create_list"
        android:layout_alignEnd="@+id/drawer_layout_custom_create_list" />

    <Button
        android:text="@string/create_list"
        android:id="@+id/drawer_layout_custom_create_list"
        style="@style/InstalistTheme1.base_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/drawer_layout_custom_create_category"
        android:layout_below="@+id/drawer_layout_custom_new_name"
        android:layout_toRightOf="@+id/drawer_layout_custom_create_category"
        android:layout_alignBottom="@+id/drawer_layout_custom_create_category" />

    <Button
        style="@style/InstalistTheme1.base_button"
        android:text="@string/create_category"
        android:id="@+id/drawer_layout_custom_create_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drawer_layout_custom_new_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/drawer_layout_custom_settings"
        android:layout_alignEnd="@+id/drawer_layout_custom_settings" />

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_layout_custom_list_name_view"
        android:layout_below="@+id/drawer_layout_custom_create_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/drawer_layout_custom_settings" />
    <Button
        android:id="@+id/drawer_layout_custom_settings"
        style="@style/InstalistTheme1.base_button"
        android:text="@string/action_settings"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>