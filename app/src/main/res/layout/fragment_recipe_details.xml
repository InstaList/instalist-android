<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/fragment_recipe_details_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <RecyclerView
        android:id="@+id/fragment_recipe_details_ingredient_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></RecyclerView>
    <Button
        android:id="@+id/fragment_recipe_details_add_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>